{
  "mapping": "output = city(city)",

  "tests": [
    {
      "name": "find a city name",
      "input": {"city": 2639577},
      "output": {"output": {"name": "Reading", "asciiname": "Reading", "id": 2639577}}
    },
    {
      "name": "fail nicely on unknown",
      "input": {"city": "1234"},
      "output": {}
    },
    {
      "name": "invalid input type",
      "input": {"city": true},
      "output": {}
    },
    {
      "name": "cope with unicode",
      "input": {"city": 3039163},
      "output": {"output" : {"name" : "Sant Julià de Lòria", "asciiname" : "Sant Julia de Loria", "id" : 3039163}}
    }
  ]
}